<div class="container-all">
  <h1>Bon-plans</h1>
</div>

<div class="dropdown">
  <button class="dropbtn">Filtre</button>
  <div class="dropdown-content">
    <a class="filter" id="banana">Bananes</a>
    <a class="filter" id="capuccino">Cappuccino</a>
    <a class="filter" id="water">Eau</a>
    <a class="filter" id="transport">Transport</a>
  </div>
</div>

<div class="all-cards container-all">
  <% @destinations.each do |destination| %>
    <div class="destination-card grow">
        <div class="destination-info">
          <h2 id="destination-name"><%= destination.destination_name %></h2>
          <p id="transport-price" class="data"><%= image_tag "train-ticket.svg", class: "info-icon" %> <%= destination.transport_price.last(6) %></p>
          <p id="banana-price" class="data hide"><%= image_tag "banana.svg", class: "info-icon" %> <%= destination.banana_price.last(6) %><span class="mass-type">/kg</span></p>
          <p id="water-price" class="data hide"><%= image_tag "water.svg", class: "info-icon" %> <%= destination.water_price.last(6) %><span class="mass-type">/1,5L</span></p>
          <p id="capuccino-price" class="data hide"><%= image_tag "cappuccino.svg", class: "info-icon" %> <%= destination.capuccino_price.last(6) %><span class="mass-type"></span></p>
        </div>
      <div class="bg">
        <div class="destination-image">
          <%= image_tag destination.photo_link %>
        </div>

        <div class="bg-svg">
          <svg class="svg-sep" viewBox="0 0 46 211" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M0 0H46L0 211V0Z" fill="#F5F5F5"/>
          </svg>
        </div>
      </div>


    </div>
  <% end %>
</div>
